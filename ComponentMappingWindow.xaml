<!-- ComponentMappingWindow.xaml
     Dette vinduet lar brukeren administrere komponent‑mappinger mellom Excel‑referanser
     og grid‑posisjoner.  Modernisert layout med kompakte knapper og større område
     for umappede referanser.
-->

<Window x:Class="WpfEGridApp.ComponentMappingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Komponent Mapping" Height="900" Width="1400"
        MinHeight="700" MinWidth="1200"
        Background="#FF1A2526"
        FontFamily="Inter, Segoe UI" FontSize="13">

    <Window.Resources>
        <!-- Palett og stil definisjoner -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#FF0078D4"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#FF00B294"/>
        <SolidColorBrush x:Key="TextBrush" Color="#FFE6ECEC"/>
        <SolidColorBrush x:Key="PanelBackground" Color="#2A3B3C"/>

        <!-- Compact button style -->
        <Style TargetType="Button" x:Key="CompactButtonStyle">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF00A88F"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#FF666666"/>
                                <Setter Property="Foreground" Value="#FFAAAAAA"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Background" Value="#FF2A3B3C"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="#FF4A5A5B"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Margin" Value="4,2"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- Style for list items -->
        <Style TargetType="ListViewItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="Margin" Value="1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF3A4B4C"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style for CheckBox -->
        <Style TargetType="CheckBox">
            <Setter Property="Width" Value="18"/>
            <Setter Property="Height" Value="18"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource PanelBackground}" CornerRadius="16" Margin="15" Padding="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,15">
                <TextBlock Text="Komponent Mapping" FontSize="18" FontWeight="Bold"
                           Foreground="{StaticResource TextBrush}" Margin="0,0,0,8"/>
                <TextBlock Text="Map Excel-referanser til grid-posisjoner basert på det faktiske oppsettet. Du kan også mappe til Motor/Door punkter."
                           FontSize="11" Foreground="#FFB0B8B8" TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Eksisterende mappings (venstre side) -->
            <Border Grid.Row="1" Grid.Column="0" Background="#FF1A2526" CornerRadius="8" Padding="12" Margin="0,0,8,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Eksisterende Mappings" FontWeight="SemiBold" FontSize="13"
                               Foreground="{StaticResource TextBrush}" Margin="0,0,0,8" Grid.Row="0"/>
                    <Button Content="Slett alle mappings"
                            Click="ClearAllMappings_Click"
                            Style="{StaticResource CompactButtonStyle}"
                            Background="#FFFF4444"
                            ToolTip="Slett alle eksisterende mappings" Grid.Row="1"/>
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="0,4,0,0">
                        <ItemsControl x:Name="MappingsList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#FF2A3B3C" CornerRadius="5" Margin="0,2" Padding="8,5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="60"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding ExcelReference}" FontWeight="SemiBold"
                                                       Foreground="{StaticResource AccentBrush}" VerticalAlignment="Center" FontSize="11"/>
                                            <TextBlock Grid.Column="1" Text="{Binding GridPosition}" Foreground="{StaticResource TextBrush}" 
                                                       VerticalAlignment="Center" FontSize="11" Margin="8,0,0,0"/>
                                            <Button Grid.Column="2" Content="Slett" Width="55" Height="24"
                                                    Style="{StaticResource CompactButtonStyle}"
                                                    Background="#FFFF4444"
                                                    FontSize="10"
                                                    Click="DeleteMapping_Click"
                                                    Tag="{Binding ExcelReference}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Kontroller og umappede referanser (høyre side) -->
            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Kontroller -->
                <Border Grid.Row="0" Background="#FF1A2526" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                    <StackPanel>
                        <TextBlock Text="Legg til ny mapping:" FontWeight="SemiBold" FontSize="13"
                                   Foreground="{StaticResource TextBrush}" Margin="0,0,0,8"/>
                        <Label Content="Excel referanse:"/>
                        <TextBox x:Name="NewExcelReference" ToolTip="F1, X2:41, K3, etc."/>

                        <!-- Mapping knapper i grid layout for bedre plass -->
                        <Grid Margin="0,8,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Row="0" Grid.Column="0" Content="Start custom mapping"
                                    Click="StartInteractiveMapping_Click"
                                    Style="{StaticResource CompactButtonStyle}"
                                    ToolTip="Klikk på grid-posisjon (T=oversiden, B=undersiden)"/>

                            <Button Grid.Row="0" Grid.Column="1" Content="Start Bulk Mapping"
                                    Click="StartRangeMapping_Click"
                                    Style="{StaticResource CompactButtonStyle}"
                                    Background="#FF339966"
                                    ToolTip="Map en rekke av X-klemmer til flere grid-celler"/>

                            <Button Grid.Row="1" Grid.Column="0" x:Name="FinishBulkMappingButton"
                                    Content="Ferdig bulk mapping"
                                    Click="FinishBulkMappingButton_Click"
                                    Style="{StaticResource CompactButtonStyle}"
                                    Background="#FF707070"
                                    ToolTip="Fullfør bulk mapping"
                                    Visibility="Collapsed"/>

                            <Button Grid.Row="1" Grid.Column="1" Content="Start sekvensiell mapping"
                                    Click="StartSpecificMapping_Click"
                                    Style="{StaticResource CompactButtonStyle}"
                                    Background="#FF9932CC"
                                    ToolTip="Map hver unik Excel-celle individuelt"/>

                            <Button Grid.Row="2" Grid.ColumnSpan="2" Content="Finn umappede referanser"
                                    Click="FindUnmappedReferences_Click"
                                    Style="{StaticResource CompactButtonStyle}"
                                    Background="{StaticResource PrimaryBrush}"
                                    ToolTip="Søk gjennom Excel for umappede referanser"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Umappede referanser - MYE STØRRE NÅ -->
                <Border Grid.Row="1" Background="#FF1A2526" CornerRadius="8" Padding="12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Umappede referanser:" FontWeight="SemiBold" FontSize="13"
                                   Foreground="{StaticResource TextBrush}" Margin="0,0,0,8" Grid.Row="0"/>
                        <ListView x:Name="UnmappedReferencesList" Grid.Row="1" Margin="0,0,0,8"
                                  Background="#FF2A3B3C" Foreground="{StaticResource TextBrush}"
                                  BorderBrush="#FF4A5A5B">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Width="35">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox IsChecked="{Binding IsSelected}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Referanse" Width="450" DisplayMemberBinding="{Binding Reference}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <Button Content="Start mapping av valgte"
                                Click="StartSelectedMapping_Click"
                                Style="{StaticResource CompactButtonStyle}"
                                Background="{StaticResource AccentBrush}"
                                ToolTip="Start sekvensiell mapping av valgte referanser" Grid.Row="2"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- Statuslinje -->
            <Border Grid.Row="2" Grid.ColumnSpan="2" Background="#FF1A2526" CornerRadius="6" Padding="10" Margin="0,8,0,0">
                <TextBlock x:Name="StatusText" Text="Klar" Foreground="{StaticResource TextBrush}" FontSize="11"/>
            </Border>

            <!-- Bunnknapper - kompakte -->
            <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                <Button Content="Prosesser alle ledninger"
                        Click="ProcessAllWithMappings_Click"
                        Style="{StaticResource CompactButtonStyle}"
                        Background="{StaticResource AccentBrush}"
                        Width="160"
                        ToolTip="Bruk mappings til å automatisk måle alle ledninger"/>
                <Button Content="Test prosessering"
                        Click="TestProcessing_Click"
                        Style="{StaticResource CompactButtonStyle}"
                        Background="#FFFF8C00"
                        Width="130"
                        ToolTip="Test prosessering uten å skrive til Excel"/>
                <Button Content="Lukk" Click="Close_Click"
                        Style="{StaticResource CompactButtonStyle}"
                        Background="#FF666666"
                        Width="80"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>